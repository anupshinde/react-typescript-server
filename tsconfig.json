{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    
    "sourceMap": false, //true
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "rootDir": "./app",
    "outDir": "./ts_compiled"
  },
  "exclude": [
    "typings",
    "node_modules"
  ]
}